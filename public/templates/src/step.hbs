<!-- Map selector -->
<div class="page-header">
   <h1 style="text-align: center;">{{_ 'Choose a map' }}</h1>
</div>
<div class="container">
  <div class="row">
    {{#maps}}
    <div class="col-sm-3">
      <div class="options" style="text-align: center;">
          <p>
            <button class="btn btn-default btn-lg map_select{{disabled}}" value="{{identifier}}">
              <i class="icon-plane"></i><span>{{_ 'Play Map' }}</span>
            </button>
          </p>
        </div>
      <div class="hero-widget well well-sm">
        <div style="height: 200px;" id="{{identifier}}"></div>
        <div class="text">
          <div class="caption">
            <h2>{{name}}</h2>
            <p style="height: 64px;">{{desc}}</p>
            <p>{{location.address}}</p>
            <p>{{location.town}}</p>
          </div>
        </div>
        <div class="progress" style="background: #ddd">
          <div class="bar bar-success" style="width: 100%;"></div>
        </div>
        <div class="row-fluid">
          <div class="pull-left"><b>Truemedia</b><br><small>{{_ 'CREATED BY' }}</small></div>
          <div class="pull-right"><b>N/A</b><br><small>{{_ 'LIKES' }}</small></div>
        </div>
      </div>
    </div>
    {{/maps}}
  </div>
</div>